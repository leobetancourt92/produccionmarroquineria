                      <?php if(strrpos($purchaseOrder->ord_tipo_cli, 'p')): ?>
                      <?php foreach($persons as $person): ?>
                      <?php $purchaseOrder->ord_tipo_cli = str_replace(', p', '', $purchaseOrder->ord_tipo_cli) ?>
                      <?php if($purchaseOrder->ord_tipo_cli == $person->per_id): ?>
                      <?php echo e($person->per_nombres.' '.$person->per_apellidos); ?>

                      <?php endif; ?>
                      <?php endforeach; ?>
                      <?php else: ?>
                      <?php foreach($business as $busines): ?>
                      <?php $purchaseOrder->ord_tipo_cli = str_replace(', b', '', $purchaseOrder->ord_tipo_cli) ?>
                      <?php if($purchaseOrder->ord_tipo_cli == $busines->emp_id): ?>
                      <?php echo e($busines->emp_nombres); ?>

                      <?php endif; ?>
                      <?php endforeach; ?>
                      <?php endif; ?>
                    </td>
                    <td>
                      <?php foreach($products as $product): ?>
                      <?php if($purchaseOrder->pro_id == $product->pro_id): ?>
                      <?php echo e($product->pro_descripcion); ?>

                      <?php endif; ?>
                      <?php endforeach; ?>
                    </td>
                    <td><?php echo e($purchaseOrder->det_com_cantidad); ?></td>
                    <td>
                      <button class="btn btn-warning" data-toggle="tooltip" title="Aprobar">
                        <a href="<?php echo e(url('inventario/state?id=').$purchaseOrder->ord_com_id); ?>" class="glyphicon glyphicon-hand-left" style="color: white"></a>
                      </button>
                    </td>
